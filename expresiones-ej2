a) sed 's/\./\.\n/g' breve_historia.txt
b) sed '/^.$/d' breve_historia_temp.txt
c) sed 's/\./\.\n/g' breve_historia.txt | sed '/^.$/d' > breve_historia_2.txt
d) egrep -i 'independencia' breve_historia.txt
e) egrep -o $'\n''.?El .*\.'$'\n' breve_historia.txt
f) egrep -c 'peronismo' breve_historia.txt
g) egrep 'Sarmiento' breve_historia.txt | egrep -c 'Rosas'
h) egrep '([18]{2}[0-9][1-9])|(1900)' breve_historia.txt
i) sed 's/(^|(\n)+)( )*([a-zA-ZÀ-ú])*\b//g'  # nose si me anda mal o que pero los '\n' los busca mal, me busca "n" en vez del new line
